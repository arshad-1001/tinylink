generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Link {
  id          String    @id @default(cuid())
  shortCode   String    @unique
  originalUrl String
  clicks      Int       @default(0)
  lastClicked DateTime?
  createdAt   DateTime  @default(now())
}
